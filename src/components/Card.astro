---
export interface Props {
    nomMaison: string;
    adresse: string;
    prix: number;
    surface: number;
    nbChambres: number;
    nbSdb: number;
    imgUrl: string;
}

const { nomMaison, adresse, prix, surface, nbChambres, nbSdb, imgUrl } =
    Astro.props;
---

<div class="card border p-4 shadow-lg">
    <img
        src={imgUrl}
        alt={`Image de ${nomMaison}`}
        class="w-full h-32 object-cover mb-4"
    />
    <h2 class="text-xl font-bold mb-2">{nomMaison}</h2>
    <p class="text-gray-600">{adresse}</p>
    <ul class="mt-2">
        <li>Prix : {prix} € / mois</li>
        <li>Surface : {surface} m²</li>
        <li>Chambres : {nbChambres}</li>
        <li>Salles de bain : {nbSdb}</li>
    </ul>
</div>
